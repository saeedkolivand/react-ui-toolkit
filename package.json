{
  "name": "@saeedkolivand/react-ui-toolkit",
  "version": "0.1.12",
  "description": "A modern React UI toolkit with TypeScript support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "dist/styles.css"
  ],
  "scripts": {
    "build": "npm run prepare && rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,scss}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-storybook:prod": "NODE_ENV=production STORYBOOK_BASE_PATH=/react-ui-toolkit/ storybook build",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "postinstall": "echo \"Either import CSS directly: import '@saeedkolivand/react-ui-toolkit/dist/styles.css' OR use StylesProvider component to auto-load styles.\"",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "npm run prepublishOnly && npm publish --access public",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "deploy-storybook": "npm run build-storybook:prod && gh-pages -d storybook-static"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.8",
    "@types/classnames": "^2.3.4",
    "classnames": "^2.5.1",
    "framer-motion": "^12.16.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@storybook/addon-docs": "^9.0.6",
    "@storybook/addon-links": "^9.0.6",
    "@storybook/addon-onboarding": "^9.0.6",
    "@storybook/mdx2-csf": "^1.1.0",
    "@storybook/react-vite": "^9.0.6",
    "gh-pages": "^6.3.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^9.0.6",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.3.0",
    "postcss": "^8.5.4",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "rollup": "^4.42.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^9.0.6",
    "tailwindcss": "^4.1.8",
    "ts-jest": "^29.3.2",
    "typescript": "^5.0.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,scss}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "typescript",
    "tailwind"
  ],
  "author": "",
  "license": "MIT",
  "overrides": {
    "storybook": "$storybook"
  }
}
